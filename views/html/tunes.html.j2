{# views/html/tunes.html.j2 #}
{% extends "views/html/base.html.j2" %}

{% block body %}
    <article>
        <h1>All Tunes</h1>
        <section>
            <table class="datatable responsive nowrap">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Kind</th>
                        <th>Composer</th>
                    </tr>
                </thead>
                <tbody>

                    {% for key, tune in tunes.items() %}
                        <tr>
                            <td>
                                <a href="tune/{{ key }}.html">
                                    {{ tune.name }}
                                </a>
                            </td>
                            <td>{{ tune['short-kind'] }}</td>
                            <td>{{ common.shortAuthorOrAuthor(tune) }}</td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>
        </section>
    </article>
{% endblock %}
