{# views/html/tunes.html.j2 #}
{% extends "views/html/base.html.j2" %}

{% block body %}
    <article>
        <h1>All Tunes</h1>
        <section>
            <table class="datatable responsive wrap">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Kind</th>
                        <th>Composer</th>
                    </tr>
                </thead>
                <tbody>

                    {% for slug, tune in tunes.items() -%}
                        {{ common.tuneRow(slug, tune, false) }}
                    {%- endfor %}

                </tbody>
            </table>
        </section>
    </article>
{% endblock %}
