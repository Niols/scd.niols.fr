#!/bin/sh

printf '<article>'
printf   '<h1>All Books</h1>'
printf   '<section>'
printf     '<table class="datatable responsive nowrap">'
printf       '<thead>'
printf         '<tr>'
printf           '<th>Title</th>'
printf         '</tr>'
printf       '</thead>'
printf       '<tbody>'

iter books
while next; do
    enter book
    printf     '<tr>'
    printf       '<td><a href="book/%s.html">%s</a></td>' \
        "$(parent url slug)" "$(text title)"
    printf     '</tr>'
    leave
done

printf       '</tbody>'
printf     '</table>'
printf   '</section>'
printf '</article>'
