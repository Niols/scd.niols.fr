{# views/html/dances.html.j2 #}
{% extends "views/html/base.html.j2" %}

{% block body %}
    <article>
        <h1>All Dances</h1>
        <section>
            <table class="datatable responsive nowrap">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Kind</th>
                        <th>Deviser</th>
                    </tr>
                </thead>
                <tbody>

                    {% for slug, dance in dances.items() %}
                        <tr>
                            <td>
                                <a href="dance/{{ slug }}.html">
                                    {{ dance.name }}
                                </a>
                            </td>
                            <td>{{ dance['short-kind'] }}</td>
                            <td>{{ common.shortAuthorOrAuthor(dance) }}</td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>
        </section>
    </article>
{% endblock %}
