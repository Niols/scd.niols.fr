{# views/html/dances.html.j2 #}
{% extends "views/html/base.html.j2" %}

{% block body %}
    <article>
        <h1>Index of the Dances</h1>

        <section>
            {{ common.welcomeMessage() }}
            <p>
                You are here on the index of the dances. You might want to visit
                the <a href="tunes.html">index of the tunes</a> or
                the <a href="books.html">index of the books</a>.
            </p>
        </section>

        <section>
            <table class="datatable responsive wrap">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Kind</th>
                        <th>Deviser</th>
                    </tr>
                </thead>
                <tbody>

                    {% for slug, dance in dances.items() -%}
                        {{ common.danceRow(slug, dance, false) }}
                    {%- endfor %}

                </tbody>
            </table>
        </section>
    </article>
{% endblock %}
