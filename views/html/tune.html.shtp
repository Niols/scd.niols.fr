#!/bin/sh

printf '<article>'
printf   '<h1>%s</h1>' "$(text name)"
printf   '<h2>%s</h2>' "$(text kind)"

printf   '<section>'
printf     '<p>Composed by %s.</p>' "$(text author)"

if exists scddb-id; then
    printf '<p>See this tune'
    printf  ' <a href="https://my.strathspey.org/dd/tune/%s/">' "$(url scddb-id)"
    printf     'in the Scottish Country Dance Database</a>.</p>'
fi

printf   '</section>'
printf '</article>'
